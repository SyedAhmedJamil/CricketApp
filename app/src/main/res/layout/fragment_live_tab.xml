                        app:layout_constraintStart_toEndOf="@+id/textView_ball1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:visibility='@{viewmodel.update.matchData.recent.split(" \\| ")[3] == null ? View.INVISIBLE : View.VISIBLE }'
                        android:id="@+id/textView_ball3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/over_ball_circle"
                        android:gravity="center"
                        android:text='@{viewmodel.update.matchData.recent.split(" \\| ")[3]}'
                        android:textAlignment="center"
                        android:textColor="@color/pureWhite"
                        android:textSize="15sp"
                        android:textStyle="bold"
