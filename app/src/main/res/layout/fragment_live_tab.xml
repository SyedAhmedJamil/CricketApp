                        android:layout_height="25dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/over_ball_circle"
                        android:gravity="center"
                        android:text='@{viewmodel.update.matchData.recent.split(" \\| ")[1]}'
                        android:textAlignment="center"
                        android:textColor="@color/pureWhite"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView_ball2"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:visibility='@{viewmodel.update.matchData.recent.split(" \\| ")[2] == null ? View.INVISIBLE : View.VISIBLE }'
